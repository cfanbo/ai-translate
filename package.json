{
  "name": "ai-translate",
  "displayName": "ai-translate",
  "description": "Code Comments AI Translation。支持阿里云百炼(Alibaba) 和 扣子(字节跳动)应用平台",
  "version": "0.1.1",
  "publisher": "cfanbo",
  "icon": "img/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/cfanbo/vscode-ai-translate"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-translate.Do",
        "title": "AI 翻译"
      },
      {
        "command": "extension.Issue",
        "title": "Report Issue"
      }
    ],
    "keybindings": [
      {
        "command": "ai-translate.Do",
        "key": "ctrl+alt+t",
        "when": "editorHasSelection",
        "mac": "cmd+alt+t",
        "linux": "ctrl+alt+t",
        "win": "ctrl+alt+t"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ai-translate.Do",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "AI 翻译",
      "properties": {
        "ai-translate.provider": {
          "type": "string",
          "enum": [
            "bailian",
            "coze"
          ],
          "enumDescriptions": [
            "阿里云百炼",
            "字节跳动-扣子"
          ],
          "default": "bailian",
          "description": "服务提供商",
          "order": 0
        },
        "ai-translate.coze.botId": {
          "type": "string",
          "default": "",
          "markdownDescription": "打开 https://www.coze.cn/home, 点击左侧“个人空间”菜单，进入 Bot 的开发页面, 地址栏 URL 中 bot 参数后的数字就是 Bot ID",
          "when": "provider == 'coze'",
          "order": 3
        },
        "ai-translate.coze.token": {
          "type": "string",
          "default": "",
          "markdownDescription": "点击 https://www.coze.cn/open/api 生成令牌",
          "when": "provider == 'coze'",
          "order": 4
        },
        "ai-translate.bailian.APP_ID": {
          "type": "string",
          "default": "",
          "markdownDescription": "阿里云百炼-应用ID, 点击 https://bailian.console.aliyun.com/#/app-center 获取ID",
          "when": "provider == 'bailian'",
          "order": 1
        },
        "ai-translate.bailian.API_KEY": {
          "type": "string",
          "default": "sk-xxx",
          "markdownDescription": "以 `sk-` 为前缀的字符串, 点击 https://bailian.console.aliyun.com/?apiKey=1#/api-key 查看",
          "when": "provider == 'bailian'",
          "order": 2
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "debug": "^4.3.7"
  }
}